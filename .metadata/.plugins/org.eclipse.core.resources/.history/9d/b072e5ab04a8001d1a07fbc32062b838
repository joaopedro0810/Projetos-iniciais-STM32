  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOA_CLK_ENABLE();

}

/* USER CODE BEGIN 4 */

/* USER CODE END 4 */

/* USER CODE BEGIN Header_EnviaSerial1_fun */
/**
  * @brief  Function implementing the EnviaSerial1 thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_EnviaSerial1_fun */
void EnviaSerial1_fun(void const * argument)
{
  /* USER CODE BEGIN 5 */
  /* Infinite loop */
  for(;;)
  {
	  HAL_UART_Transmit(&huart1, (const uint8_t *) "Mensagem 1\r\n", strlen("Mensagem 1\r\n"), 100);

	  teste++;
	  if (teste == 10)
	  {
		  osThreadSuspend(EnviaSerial3Handle);
	  }

	  osDelay(1000);
  }
  /* USER CODE END 5 */
}

/* USER CODE BEGIN Header_EnviaSerial2_fun */
/**
* @brief Function implementing the EnviaSerial2 thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_EnviaSerial2_fun */
void EnviaSerial2_fun(void const * argument)
{
  /* USER CODE BEGIN EnviaSerial2_fun */
  /* Infinite loop */
  for(;;)
  {
	  HAL_UART_Transmit(&huart1, (const uint8_t *) "Mensagem 2\r\n", strlen("Mensagem 2\r\n"), 100);
	  osDelay(1000);
  }
  /* USER CODE END EnviaSerial2_fun */
}

